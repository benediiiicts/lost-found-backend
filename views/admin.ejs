<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Lost & Found</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
    <nav>
        <a href="/beranda" class="logo">
            <img src="/gambar/Logo.png" alt="Lost & Found Logo">
        </a>

        <div class="nav-links">
            <a id="navAdmin" href="/admin">Admin Panel</a>
            <span class="halo-user">
                Halo, <%= user.username %>
            </span>
            <a href="/logout" class="btn-login btn-logout">Logout</a>
        </div>
    </nav>

    <div class="container">
        <h2 class="page-title">Admin Panel (Manajemen Barang)</h2>

        <div class="table-wrapper">
            <table id="adminTable">
                <thead>
                    <tr>
                        <th>Pelapor</th>
                        <th>Barang</th>
                        <th>Gambar</th>
                        <th>Deskripsi</th>
                        <th>Lokasi</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (items && items.length > 0) { %>
                        <% items.forEach(item => { %>
                            <tr>
                                <td><%= item.pelapor %></td>
                                <td><%= item.nama_barang %></td>
                                <td>
                                    <% if (item.gambar) { %>
                                        <img src="/uploads/<%= item.gambar %>" alt="gambar" style="width: 80px;">
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td><%= item.deskripsi %></td>
                                <td><%= item.lokasi %></td>
                                <td><%= item.status %></td>
                                <td>
                                    <!-- Admin actions -->
                                    <a href="/admin/edit/<%= item.id %>" class="btn-edit">Edit</a>
                                    <a href="/admin/delete/<%= item.id %>" class="btn-delete">Hapus</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" style="text-align:center;">Belum ada data laporan.</td>
                        </tr>
                    <% } %>
                </tbody>

            </table>
        </div>
    </div>

    <script src="/scripts/script.js"></script>
</body>

</html>